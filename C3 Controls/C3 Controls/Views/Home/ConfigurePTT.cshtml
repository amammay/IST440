@using C3_Controls.Models
@model PTT
@{
    var voltages = Model.Voltages;
    var operators = Model.Operator;
    var lamps = Model.Lamp;
    var clamps = Model.Clamp;
    var lens = Model.Lens;
    var options = Model.Options;
    
}
<div class="row">
    <!-- Parts Container (Slider) -->
    <div id="parts_container" class="col-md-6">
        <h2>Configuration Parts</h2>
        <br />
        <div class="no-js">
            <div id="main-slider" class="liquid-slider">

                <!-- Styles Slide -->
                <div id="slide_styles">
                    <h2 class="title">Operators</h2>
                    <div class="row">
                        @foreach (var item in operators)
                        {
                            <div class="col-md-3 metro-column">
                                <div id="item_style_@item.ToLower().Replace(" ", "_")" class="metro" data-price="5" data-selected="false" draggable="true" ondragstart="drag(event)">
                                    <h1>@item</h1>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Voltages Slide -->
                <div id="slide_pttvolt">
                    <h2 class="title">Voltages</h2>
                    <div class="row">
                        @foreach (var item in voltages)
                        {
                            <div class="col-md-3 metro-column">
                                <div id="item_voltage_@item.ToLower().Replace(" ", "_")" class="metro" data-price="5" data-selected="false" draggable="true" ondragstart="drag(event)">
                                    <h1>@item</h1>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Position Slide -->
                <div id="slide_lamp">
                    <h2 class="title">Lamp</h2>
                    <div class="row">
                        @foreach (var item in lamps)
                        {
                            <div class="col-md-3 metro-column">
                                <div id="item_position_@item.ToLower().Replace(" ", "_")" class="metro" data-price="5" data-selected="false" draggable="true" ondragstart="drag(event)">
                                    <h1>@item</h1>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <!-- Position Slide -->
                <div id="slide_lamp">
                    <h2 class="title">Clamp</h2>
                    <div class="row">
                        @foreach (var item in clamps)
                        {
                            <div class="col-md-3 metro-column">
                                <div id="item_position_@item.ToLower().Replace(" ", "_")" class="metro" data-price="5" data-selected="false" draggable="true" ondragstart="drag(event)">
                                    <h1>@item</h1>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <!-- Position Slide -->
                <div id="slide_lamp">
                    <h2 class="title">Lens</h2>
                    <div class="row">
                        @foreach (var item in lens)
                        {
                            <div class="col-md-3 metro-column">
                                <div id="item_position_@item.ToLower().Replace(" ", "_")" class="metro" data-price="5" data-selected="false" draggable="true" ondragstart="drag(event)">
                                    <h1>@item</h1>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <!-- Position Slide -->
                <div id="slide_lamp">
                    <h2 class="title">Options</h2>
                    <div class="row">
                        @foreach (var item in options)
                        {
                            <div class="col-md-3 metro-column">
                                <div id="item_position_@item.ToLower().Replace(" ", "_")" class="metro" data-price="5" data-selected="false" draggable="true" ondragstart="drag(event)">
                                    <h1>@item</h1>
                                </div>
                            </div>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="col-md-6" style="margin-bottom:124px;">
        <h1 class="cat-title">Drag a part into your cart</h1>
        <h4 id="text_price" style="margin-left:24px;margin-top:32px">Total Price: $0</h4>
        <h4 id="text_sku" style="margin-left:24px;margin-top:32px">Product Sku: </h4>
        <h4 style="margin-left:24px;margin-top:16px"> Quantity:  <input type="text" name="quantity" style="width:32px"> <button type="button" id="cart_button" style="margin-left:24px;margin-top:16px">Add To Cart</button> </h4>
    </div>
</div>

<div class="row">
    <!-- Selection Container -->
    <div id="container_main" class="col-md-12" style="min-height:800px;margin-top:64px" ondrop="drop(event)" ondragover="allowDrop(event)">
        <h2>Cart</h2>
        <br />

        <!-- Styles Selection -->
        <div class="col-md-3">
            <h4>Selected Style</h4>
            <div id="container_style" class="row">
            </div>
        </div>

        <!-- Voltage Selection -->
        <div class="col-md-3">
            <h4>Selected Voltage</h4>
            <div id="container_voltage" class="row">
            </div>
        </div>

        <!-- Position Selection -->
        <div class="col-md-3">
            <h4>Selected Positions</h4>
            <div id="container_position" class="row">
            </div>
        </div>
    </div>
</div>

