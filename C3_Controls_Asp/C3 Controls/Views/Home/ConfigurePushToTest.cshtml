@using C3_Controls.Models
@model C3_Controls.Models.UiDataModel.PushToTest
@{
   
    var voltages = Model.Voltages;
    var lampColors = Model.LampColors;
    var lensColors = Model.LensColors;
    var clampRings = Model.ClampRings;
    var lensTypes = Model.LensTypes;
    var options = Model.Options;
    ViewBag.Title = "Configure Push to Test";
}

<!-- Header -->
<div class="part-whole-page row">
    <h1 class="part-text part-text-header">Push-to-Test Configuration</h1>
    <div class="col-md-9">
        <p class="part-text part-text-body">
            Thank you for your interest in our line of 30mm Industrial
            Pilot Devices - featuring a rugged, all-polyester construction
            and including a wide range of push buttons, pilot lights and
            selector switches. We make it simple and easy for you to identify
            the exact product you need. Choose a product from the directory
            below. If you have any questions, we’re here to help.
        </p>
    </div>
    <div class="col-md-3">
        <img class="part-img" src="~/Content/assets/img_push_to_test.png" />
    </div>
</div>

<!-- Available Items -->
<div class="row">
    <!-- Configuration Parts -->
    <div class="col-md-8" id="parts_container">
        <h2 class="part-section-title">Available Parts</h2>
        <h1 class="part-section-body">Drag a part into your product</h1>

        <!-- Tabs With Left Navigation -->
        <div class="row tabs nomargin-top">

            <!-- Tabs -->
            <div class="col-md-3 col-sm-3 nopadding-right" style="padding-right:0px;padding-left:0px;">
                <ul class="nav nav-tabs nav-stacked">
                    <li class="active">
                        <a href="#tab_a" data-toggle="tab">
                            <i class="fa fa-dashboard"></i> Operators
                        </a>
                    </li>
                    <li>
                        <a href="#tab_b" data-toggle="tab">
                            <i class="fa fa-bolt"></i> Voltages
                        </a>
                    </li>
                    <li>
                        <a href="#tab_c" data-toggle="tab">
                            <i class="fa fa-tint"></i> Lamp Colors
                        </a>
                    </li>
                    <li>
                        <a href="#tab_d" data-toggle="tab">
                            <i class="fa fa-tint"></i> Lens Colors
                        </a>
                    </li>
                    <li>
                        <a href="#tab_e" data-toggle="tab">
                            <i class="fa fa-wrench"></i> Clamp Rings
                        </a>
                    </li>
                    <li>
                        <a href="#tab_f" data-toggle="tab">
                            <i class="fa fa-eye"></i> Lens Types
                        </a>
                    </li>
                    <li>
                        <a href="#tab_g" data-toggle="tab">
                            <i class="fa fa-gear"></i> Options
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Tab Contents -->
            <div class="col-md-9 col-sm-9 nopadding-left" style="padding-right:0px;padding-left:0px;">
                <div class="tab-content">
                    <div id="tab_a" class="tab-pane active">
                        <h4>Basic Operators</h4>
                        <div class="row">
                            @*@foreach (var i in basics)
                            {
                                <div id="col_basic_@i.Name" class="col-md-3 metro-column">
                                    <div id="item_basic_@i.ToString()" class="metro" data-sku="@i.Sku" data-price="@i.Price" data-selected="false" draggable="true" ondragstart="dragPart(event)">
                                        <img class="part-tile-img" alt="@i.Name" src="@i.Img" title="@i.Name" />
                                        <p style="color:white; text-align:center; font-size:10px;"> @i.Desc </p>
                                    </div>
                                </div>
                            }*@
                        </div>
                    </div>

                    <div id="tab_b" class="tab-pane">
                        <h4>Voltages</h4>
                        <div id="slide_voltages" class="row metro-overflow">
                            @foreach (var i in voltages)
                            {
                                <div id="col_voltage_@i.Name" class="col-md-3 metro-column">
                                    <div id="item_voltage_@i.ToString()" class="metro" data-sku="@i.Sku" data-price="@i.Price" data-selected="false" draggable="true" ondragstart="dragPart(event)">
                                        <img class="part-tile-img" alt="@i.Name" src="@i.Img" title="@i.Name" />
                                        <p style="color:white; text-align:center; font-size:10px;"> @i.Desc </p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div id="tab_c" class="tab-pane">
                        <h4>Lamp Colors</h4>
                        <div id="slide_lamp_colors" class="row metro-overflow">
                            @foreach (var i in lampColors)
                            {
                                <div id="col_lamp_color_@i.ToString()" class="col-md-3 metro-column">
                                    <div id="item_lamp_color_@i.ToString()" class="metro" data-sku="@i.Sku" data-price="@i.Price" data-selected="false" draggable="true" ondragstart="dragPart(event)">
                                        <img class="part-tile-img" alt="@i.Name" src="@i.Img" title="@i.Name" />
                                        <p style="color:white; text-align:center; font-size:10px;"> @i.Desc </p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div id="tab_d" class="tab-pane">
                        <h4>Lens Colors</h4>
                        <div class="row metro-overflow">
                            @foreach (var i in lensColors)
                            {
                                <div id="col_lens_color_@i.ToString()" class="col-md-3 metro-column">
                                    <div id="item_lens_color_@i.ToString()" class="metro" data-sku="@i.Sku" data-price="@i.Price" data-selected="false" draggable="true" ondragstart="dragPart(event)">
                                        <img class="part-tile-img" alt="@i.Name" src="@i.Img" title="@i.Name" />
                                        <p style="color:white; text-align:center; font-size:10px;"> @i.Desc </p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div id="tab_e" class="tab-pane">
                        <h4>Clamp Rings</h4>
                        <div class="row">
                            @foreach (var i in clampRings)
                            {
                                <div id="col_clamp_ring_@i.ToString()" class="col-md-3 metro-column">
                                    <div id="item_clamp_ring_@i.ToString()" class="metro" data-sku="@i.Sku" data-price="@i.Price" data-selected="false" draggable="true" ondragstart="dragPart(event)">
                                        <img class="part-tile-img" alt="@i.Name" src="@i.Img" title="@i.Name" />
                                        <p style="color:white; text-align:center; font-size:10px;"> @i.Desc </p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div id="tab_f" class="tab-pane">
                        <h4>Lens Types</h4>
                        <div id="slide_lens_types" class="row metro-overflow">
                            @foreach (var i in lensTypes)
                            {
                                <div id="col_lens_type_@i.ToString()" class="col-md-3 metro-column">
                                    <div id="item_lens_type_@i.ToString()" class="metro" data-sku="@i.Sku" data-price="@i.Price" data-selected="false" draggable="true" ondragstart="dragPart(event)">
                                        <img class="part-tile-img" alt="@i.Name" src="@i.Img" title="@i.Name" />
                                        <p style="color:white; text-align:center; font-size:9px;"> @i.Desc </p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div id="tab_g" class="tab-pane">
                        <h4>Options</h4>
                        <div id="slide_lens_types" class="row">
                            @*@foreach (var i in options)
                            {
                                <div id="col_option_@i.ToString()" class="col-md-3 metro-column">
                                    <div id="item_option_@i.ToString()" class="metro" data-sku="@i.Sku" data-price="@i.Price" data-selected="false" draggable="true" ondragstart="dragPart(event)">
                                        <img class="part-tile-img" alt="@i.Name" src="@i.Img" title="@i.Name" />
                                        <p style="color:white; text-align:center; font-size:10px;"> @i.Desc </p>
                                    </div>
                                </div>
                            }*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cart Information -->
    <div class="col-md-4" id="cart_info_container" style="margin-bottom:124px;">
        <h2 class="part-section-title">Product Info</h2>
        <h1 class="part-section-body" id="title_text_sku">Sku: </h1>
        <h1 class="part-section-body" id="title_text_price">Price: $0</h1>
        <hr />
        <div class="col-md-8">
            <button class="button button-primary btn-default btn-sm part-section-btn" onclick="showSelectedItems()">Details</button>
            <button class="button button-primary btn-sm part-section-btn" onclick="addToCart()">Add to Cart</button>
        </div>
        <div class="col-md-4 text-right">
            <button class="button button-primary btn-danger btn-sm part-section-btn" onclick="window.location.reload()">Clear All</button>
        </div>
    </div>
</div>

<!-- Remove Container -->
<div class="row text-center hidden" id="remove_container" style="border:1px dashed red" ondrop="dropInRemoveContainer(event)" ondragover="allowDrop(event)">
    <h4 class="part-section-lead"><i class="fa fa-trash"></i> Drop item here to remove</h4>
</div>

<!-- Product Selection -->
<div class="row">
    <!-- Product Selection Wrapper -->
    <div class="col-md-12" id="container_main" style="margin-top:64px" ondrop="dropInCart(event)" ondragover="allowDrop(event)">
        <h2 class="part-section-title">Selection</h2>
        <h1 class="part-section-body">Drag items anywhere on here</h1>

        <div class="row">
            <!-- Default Selection -->
            <div class="col-md-3">
                <h4>Required Parts</h4>
                <div id="container_required" class="row">
                    <div class="col-md-3 metro-column">
                        <div id="item_required_operator" class="metro-static" draggable="false">
                            <h1>@Model.OperatorType.Name</h1>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Basic Operator Selection -->
            <div class="col-md-3">
                <h4><i class="fa fa-dashboard"></i> Basic Operator</h4>
                <div id="container_basic" class="row"></div>
            </div>

            <!-- Voltage Selection -->
            <div class="col-md-3">
                <h4><i class="fa fa-bolt"></i> Selected Voltage</h4>
                <div id="container_voltage" class="row"></div>
            </div>

            <!-- Lamp Color Selection -->
            <div class="col-md-3">
                <h4><i class="fa fa-tint"></i> Lamp Color</h4>
                <div id="container_lamp_color" class="row"></div>
            </div>
        </div>

        <div class="row" style="margin-top:64px">
            <!-- Lens Color Selection -->
            <div class="col-md-3">
                <h4><i class="fa fa-tint"></i> Lens Color</h4>
                <div id="container_lens_color" class="row"></div>
            </div>

            <!-- Clamp Ring Selection -->
            <div class="col-md-3">
                <h4><i class="fa fa-wrench"></i> Clamp Ring</h4>
                <div id="container_clamp_ring" class="row"></div>
            </div>

            <!-- Lens Type Selection -->
            <div class="col-md-3">
                <h4><i class="fa fa-eye"></i> Lens Type</h4>
                <div id="container_lens_type" class="row"></div>
            </div>

            <!-- Options Selection -->
            <div class="col-md-3">
                <h4><i class="fa fa-gear"></i> Options</h4>
                <div id="container_option" class="row"></div>
            </div>
        </div>
    </div>
</div>

<!-- Generic Modal -->
<div id="custom_modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">

            <div id="dialog_header" class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 id="modal_title" class="modal-title"></h4>
            </div>

            <div id="dialog_body" class="modal-body">
                <p id="modal_body">
                </p>
            </div>

            <div id="dialog_footer" class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/Scripts/scripts.js")
    @Scripts.Render("~/Scripts/cart-pushtotest.js")
    <script type="text/javascript">
            $(function () {
                setup('@Model.OperatorType.Sku');
            });
    </script>
}