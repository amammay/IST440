                        </div>
                    }
                </div>
            </div>
                    

        </div>
                   

          

        <!-- Tab Contents -->
        <div class="col-md-12 col-sm-12 nopadding-left" style="padding-right:0px;padding-left:0px;">
            <div id="tab_a" class="collapse">
                                   
                <div class="row">
                    @foreach (var i in styles)
                    {
                        <div id="col_styles_@i.Name" class="col-md-3 metro-column">
                            <div id="item_styles.ToString()" class="metro" data-sku="@i.Sku" data-price="@i.Price" data-selected="false" draggable="true" ondragstart="dragPart(event)">
