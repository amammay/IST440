            </ul>

            <div id="tab_d" class="collapse">
                    
                <div class="row">
                    @foreach (var i in soundMoudle)
                    {
                        <div id="col_soundMoudle_@i.ToString()" class="col-md-3 metro-column">
                            <div id="col_soundMoudle_@i.ToString()" class="metro" data-sku="@i.Sku" data-price="@i.Price" data-selected="false" draggable="true" ondragstart="dragPart(event)">
