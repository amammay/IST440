                            <div id="item_soundModule_@i.ToString()" class="metro" data-sku="@i.Sku" data-price="@i.Price" data-selected="false" draggable="true" ondragstart="dragPart(event)">
                                <img class="part-tile-img" alt="@i.Name" src="@i.Img" title="@i.Name" />
